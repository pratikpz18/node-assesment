<!DOCTYPE html>
<head>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
    <h1>Task</h1>
    <form action="/task/tasks" method="post">
        <input type="text" name="task">
        <button>Add</button>
    </form>


    <% for(var i = 0; i < result.length; i++) {%>
        <li>
            <span><%= result[i].task %></span>
            <a href="/task/edit/<%= result[i]._id %>"><button>Edit</button></a>
            <a href="/task/tasks/<%= result[i]._id %>"><button>Delete</button></a>
        </li>
      <% } %>
    <a href="/logout">logout</a>
</body>
</html>